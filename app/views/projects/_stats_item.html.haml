- prec = defined?(precision) ? precision : 1
.stats_item
  .label
    = title
    %br
    (#{unit})
  .data
    .stats_content.left
      .sub_label Total
      .stats_value= number_with_precision(left_value, precision: prec)
    .stats_content
      .sub_label= right_title
      .stats_value= number_with_precision(right_value, precision: prec)
    .clear
